# ── REFORMMED Monitor Server Config ──────────────────────────
# Copy to .env and fill in your values

VM_PUBLIC_IP=YOUR.VM.PUBLIC.IP

# PostgreSQL
DB_USER=reformmed
DB_PASS=your_strong_password
DB_NAME=monitor_machine
DB_PORT=5432

# API Secret — agents use this to authenticate
API_SECRET=your_random_secret_key_here

# Gmail App Password (NOT your real Gmail password)
# Guide: https://support.google.com/accounts/answer/185833
GMAIL_USER=your@gmail.com
GMAIL_APP_PASS=xxxxxxxxxxxxxxxxxxxx
ALERT_TO=alert1@email.com,alert2@email.com

# Grafana
GRAFANA_USER=admin
GRAFANA_PASS=your_grafana_password

# Alert thresholds
CPU_ALERT_THRESH=90
RAM_ALERT_THRESH=90
DISK_ALERT_THRESH=85
TEMP_ALERT_THRESH=80
OFFLINE_AFTER_SECS=10
CHECK_INTERVAL_SECS=3
